<div data-backdrop="static" class="modal show" id="login" tabindex="-1" role="dialog"  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
         <span aria-hidden="true">&times;</span>
        </button>
        <div class="row">
          <div class="col-xs-12 col-md-8">
            <h1 class="modal-title" id="myModalLabel">Log in</h1>
          </div>
          <div class="col-xs-12 hidden-xs hidden-sm col-md-4">
            <%= image_tag "account.png", class: "landing_img" %>
          </div>
        </div>
        <div class="modal-body text-justify">
          <!-- Your signup form -->
          <% render "devise/registrations/new" %>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
