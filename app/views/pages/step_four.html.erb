  <!-- Sign-up Modal -->
  <div data-backdrop="static" class="modal show" id="signUp" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close"> -->
          <!--  <span aria-hidden="true">&times;</span> -->
          <!-- </button> -->
          <div class="row">
            <div class="col-xs-12 col-md-8">
              <h4 class="modal-title" id="myModalLabel">Génial !</h4>
              <p>Votre dossier est maintenant prêt. Pour exploiter 100% du service, vous devez confirmer la création de votre compte</p>
            </div>
            <div class="col-xs-12 hidden-xs hidden-sm col-md-4">
              <%= image_tag "account.png", class: "landing_img" %>
            </div>
          </div>
        </div>
        <div class="modal-body text-justify">
          <!-- Your signup form -->
          <%# render "devise/registrations/new" %>
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <div><%= f.label :email %><br />
            <%= f.email_field :email, class: "form-control input-lg" %>
          </div>
          <div><%= f.label :password %><br />
            <%= f.password_field :password, class: "form-control input-lg" %>
          </div>
          <div><%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, class: "form-control input-lg" %>
          </div>
          <div class="text-center">
            <%= f.submit "Sign up", class: "btn btn-warning" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
